@model ICollection<KinoIS.Domain.Models.CinemaUser>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Surname</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Make admin</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>
                    @if(item.Role == "User")
                    {
                        <a asp-controller="CinemaUser" asp-action="GiveRoleTo"
                        asp-route-id="@item.Id" class="btn btn-outline-danger">Make admin</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>